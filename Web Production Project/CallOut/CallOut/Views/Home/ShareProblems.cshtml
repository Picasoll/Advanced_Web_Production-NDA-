@{
    ViewBag.Title = "ShareProblems";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Welcome To CallOut</title>
    @*<link rel="icon" type="image/ico" href="./Images/icon.png" />*@


    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--map links -->
    <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
    <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.js'></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.47.0/mapbox-gl.css' rel='stylesheet' />
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        #map-container {
            position: relative;
            height: 400px;
            width: inherit;
        }

        #map {
            position: relative;
            height: inherit;
            width: inherit;
        }
    </style>
</head>
<body bgcolor="#424242">

    <div class="row green">
        <b class="show-on-medium-and-down hide-on-large-only white-text center-align">Creating a safe place for everyone</b>
    </div>

        <div class="row">
            <div class="container">
                <div class="col s12">
                    <blockquote class="grey lighten-5"><h5 class="red-text text-darken-2">Click the Button</h5></blockquote>
                </div>
                
                <br><br><br><br><br><br>
                <div class="col s12">
                    <div class="col s6 center-align">
                        <!-- Dropdown Trigger -->
                        <a class='dropdown-trigger btn amber darken-2' href='#' data-target='victim'>If You Are Victim</a>
                        <!-- Dropdown Structure -->
                        <ul id='victim' class='dropdown-content grey lighten-2'>
                            <li><a href="#!" class="deep-orange-text">ROBBERY</a></li>
                            <li class="divider" tabindex="-1"></li>
                            <li><a href="#!" class="deep-orange-text">KIDNAP</a></li>
                            <li class="divider" tabindex="-1"></li>
                            <li><a href="#!" class="deep-orange-text">FIRE HAZARD</a></li>
                        </ul>
                    </div>
                    <div class="col s6 center-align">
                        <!-- Dropdown Trigger -->
                        <a class='dropdown-trigger btn amber darken-2' href='#' data-target='witness'>If You Are Witness</a>
                        <!-- Dropdown Structure -->
                        <ul id='witness' class='dropdown-content grey lighten-2'>
                            <li><a href="#!" class="deep-orange-text">ROBBERY</a></li>
                            <li class="divider" tabindex="-1"></li>
                            <li><a href="#!" class="deep-orange-text">KIDNAP</a></li>
                            <li class="divider" tabindex="-1"></li>
                            <li><a href="#!" class="deep-orange-text">FIRE HAZARD</a></li>
                            <li class="divider" tabindex="-1"></li>
                            <li><a href="#!" class="deep-orange-text">MURDER</a></li>
                            <li class="divider" tabindex="-1"></li>
                            <li><a href="#!" class="deep-orange-text">CONSTRUCTION HAZARD</a></li>
                            <li class="divider" tabindex="-1"></li>
                            <li><a href="#!" class="deep-orange-text">SUICIDE</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <br><br><br><br><br><br><br><br>
        <div class="row">
            <div class="col s6 right-align">
                <button type="button" name="button" class="waves-effect waves-light btn-small red z-depth-3 " id="alarm-sound">
                    <i class="material-icons left">notifications_none</i>
                    Emergency Alarm
                </button>
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $('.sidenav').sidenav()
                $('.dropdown-trigger').dropdown();
                $('.modal').modal();

                var obj = document.createElement("audio");
                obj.src = "../audio/Alarm.wav";
                obj.volume = 0.5;
                obj.autoPlay = false;
                obj.preLoad = true;
                obj.controls = true;
                obj.loop = true;
                var play = false;
                $('#alarm-sound').click(function () {
                    if (play === false) {
                        obj.play();
                        play = true;
                    } else {
                        obj.pause();
                        play = false;
                    }
                });
            });
        </script>
</body>
</html>


