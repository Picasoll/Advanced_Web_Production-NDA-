<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to CallOut</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar-fixed">
        <nav class="blue">
            <div class="nav-wrapper">
                <div class="row">
                    <div class="col s12 m12 l3">
                        <a href="#" data-target="slide-out" class="sidenav-trigger show-on-large">
                            <i class="material-icons">
                                menu
                            </i>
                        </a>
                        <a href="#" class="brand-logo ">Logo</a>
                    </div>
                    <div class="col l7 right">
                        <!-- <ul id="nav-mobile" class="right hide-on-med-and-down">
                          <li>
                            <button type="button" name="button" class="waves-effect waves-light btn blue" id="alarm-sound">
                              Emergency Alarm
                            </button>
                          </li>
                        </ul> -->
                        <div class="hide-on-med-and-down">
                            <h5>Creating a safe place for everyone</h5>
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </div>

    <div>
        <ul id="slide-out" class="sidenav grey lighten-3">
            <li>
                <div class="user-view">
                    <a href="#user"><img class="circle" src="@TempData["picture"]"></a>
                    <a href="#name"><span class="grey-text text-darken-2 name">@TempData["first_name"] @TempData["middle_name"] @TempData["lastname"]</span></a>
                    <a href="#email"><span class="grey-text text-darken-2 email">@TempData["email"]</span></a>
                    <a href="#email"><span class="grey-text text-darken-2 name">@TempData["id"]</span></a>
                </div>
            </li>


            <li><div class="divider"></div></li>
            <li><a class="subheader">Search Users</a></li>
            <div class="input-field" style="margin-top:0px; margin-bottom:0px; padding-right:15px">
                <i class="material-icons prefix green-text">
                    search
                </i>
                <input placeholder="Enter Name" id="icon_prefix" type="text" class="green-text text-darken-4" style="margin-left:15px; padding-left:15px; padding-right:15px;">
            </div>

            <li><div class="divider"></div></li>

            <li><a href="#!"><i class="material-icons amber-text text-lighten-2">report</i>Share your Emergency </a></li>
            <!-- Modal Trigger -->
            <li>
                <a class="waves-effect waves-light modal-trigger" href="#ENumbers">
                    <i class="material-icons green-text text-lighten-2">
                        call
                    </i>
                    Emergency Contact Numbers
                </a>
            </li>



            <li><div class="divider"></div></li>

           
            <li>@Html.ActionLink("Logout", "Login", "Home", null, new { @class = "waves-effect" })</li>
            <li><a>© 2018 CallOut, All rights reserved</a></li>
        </ul>
    </div>

    <div id="ENumbers" class="modal">
        <div class="modal-content">
            <h4>Emergency Numbers</h4>
            <p>A bunch of text</p>
            <p>A bunch of text</p>
            <p>A bunch of text</p>
            <p>A bunch of text</p>
            <p>A bunch of text</p>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
